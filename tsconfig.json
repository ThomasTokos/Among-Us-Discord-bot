{
	"compilerOptions": {
		"moduleResolution": "node",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es2016",
			"dom"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"types/*": [ "./types/*" ]
		}
	},
	"exclude": [
    "node_modules",
		"build"
	]
}
